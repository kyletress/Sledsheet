<% provide(:title, 'Sign up') %>
<h1>Sign Up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(@user, html: {class: 'form-vertical' }) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <% if @token.present? %>
        <%= hidden_field_tag :team_code, @token %>
      <% end %>
      <%= f.input :name, class: 'form-control' %>
      <%= f.input :email, placeholder: 'you@you.com', class: 'form-control' %>
      <%= f.input :password, class: 'form-control' %>
      <%= f.input :password_confirmation, class: 'form-control' %>
      <%= f.submit %>
    <% end %>
  </div>
</div>

<%= console %>
