<h2><%= @season.name %></h2>

<div class="row">
  <div class="col-sm-12 col-md-6">
    <table class="table table-bordered">
      <caption>Men's Overall Points</caption>
      <tr>
        <th>Rank</th>
        <th>Athlete</th>
        <th>Points</th>
      </tr>
      <%= render partial: 'ranks', collection: @mens, as: :ranking %>
    </table>
  </div>
  <div class="col-sm-12 col-md-6">
    <table class="table table-bordered">
      <caption>Women's Overall Points</caption>
      <tr>
        <th>Rank</th>
        <th>Athlete</th>
        <th>Points</th>
      </tr>
      <%= render partial: 'ranks', collection: @womens, as: :ranking %>
    </table>
  </div>
</div>
