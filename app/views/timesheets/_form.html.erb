<%= form_for @timesheet do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
	<div class="control-group">
		<%= f.label :nickname, 'Nickname (optional)' %>
		<%= f.text_field :nickname %>
	</div>

	<div class="form-group">
		<%= f.label :date, 'Date' %>
		<%= f.date_select :date, :order => [:day, :month, :year], :start_year => 2002 %>
	</div>

	<div class="form-group">
		<%= f.label :track_id, 'Track' %>
		<%= f.collection_select(:track_id, Track.all, :id, :name, :prompt => "Track" )%>
	</div>

	<div class="form-group">
		<%= f.label :circuit_id, 'Circuit' %>
		<%= f.collection_select(:circuit_id, Circuit.all, :id, :name, :prompt => "Circuit" )%>
	</div>

	<div class="form-group">
		<%= f.label 'Type', class: 'control-label' %>
		<div class="controls">
			<label class="radio"><%= f.radio_button :race, false %> Training</label>
			<label class="radio"><%= f.radio_button :race, true %> Race</label>
		</div>
	</div>

	<%= f.submit %>

<% end %>