<%= form_tag nil, method: :get do %>
  <div class="form-group">
    <%= select_tag :season, options_from_collection_for_select(Season.all, "id", "name", params[:season]), prompt: 'season', onchange: 'this.form.submit();' %>
  </div>
  <div class="form-group">
    <%= select_tag :track, options_from_collection_for_select(Track.all, "id", "name", params[:track]), prompt: 'track', onchange: 'this.form.submit();' %>
  </div>
  <div class="form-group">
    <%= select_tag :circuit, options_from_collection_for_select(Circuit.all, "id", "name", params[:circuit]), prompt: 'circuit', onchange: 'this.form.submit();' %>
  </div>

  <div class="form-group">
    <%= select_tag :gender, options_for_select(["Mixed", "Men", "Women"], params[:gender]), prompt: "gender", onchange: 'this.form.submit();' %>
  </div>

  <div class="form-group">
    <%= select_tag :race, options_for_select(["Race", "Training"], params[:race]), prompt: "type", onchange: 'this.form.submit();' %>
  </div>
  <p>
    <%= link_to 'clear all filters', '#', class: 'text-danger clear-filters' %>
  </p>
<% end %>
