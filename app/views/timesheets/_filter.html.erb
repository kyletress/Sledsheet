<%= form_tag nil, method: :get, remote: true, id: 'filters' do %>
  <div class="form-group">
    <%= select_tag :season, options_from_collection_for_select(Season.all, "id", "name", params[:season]), prompt: 'season', onchange: 'this.form.submit();' %>
  </div>
  <div class="form-group">
    <%= select_tag :track, options_from_collection_for_select(Track.all, "id", "name", params[:track]), include_blank: "tracks", onchange: 'this.form.submit();' %>
  </div>
  <div class="form-group">
    <%= select_tag :circuit, options_from_collection_for_select(Circuit.all, "id", "name", params[:circuit]), include_blank: "circuit", onchange: 'this.form.submit();' %>
  </div>

  <div class="form-group">
    <%= select_tag :gender, options_for_select([["Mixed", "0"], ["Men", "1"], ["Women", "2"]], params[:gender]), prompt: "gender", onchange: 'this.form.submit();' %>
  </div>

  <div class="form-group">
    <%= select_tag :type, options_for_select([["Race", true], ["Training", false]], params[:race]), prompt: "type", onchange: 'this.form.submit();' %>
  </div>

  <div class="form-group">
    <%= submit_tag "Filter", class: 'btn btn-primary btn-sm', id: 'filter-submit' %>
  </div>

  <p>
    <%= link_to '#', class: 'text-danger clear-filters' do %>
    <span class="glyphicon glyphicon-remove"></span> Clear all filters
    <% end %><br>
    <small class="text-muted">(This won't reset your current search)</small>
  </p>
<% end %>
