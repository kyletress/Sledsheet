<% provide(:title, "Timesheets") %>


<h2 class="page-header">Timesheets</h2>

<div class="row">
  <div class="col-lg-12">
    <%= form_tag timesheets_path, method: :get do %>
      <div class="form-group">
        <%= text_field_tag :query, params[:query], class: 'form-control', placeholder: 'search timesheets' %>
        <%= submit_tag "Search" %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-10">
<table class="table table-bordered">
  <% @timesheets.group_by(&:season).each do |season, timesheets| %>
    <tr>
      <th colspan="3"><%= season.name %></th>
    </tr>
    <% timesheets.each do |timesheet| %>
      <tr>
        <td class="timesheet-name"><%= link_to timesheet.name, timesheet %>
          <% if timesheet.pdf.present? %>
            <%= link_to timesheet.pdf_url, class: "btn btn-default btn-xs" do %>
              <i class="glyphicon glyphicon-file"></i> Download PDF
            <% end %>
          <% end %>
        </td>
        <td><%= timesheet.gender.humanize %></td>
        <td><%= timesheet.nice_date %></td>
      </tr>
    <% end %>
  <% end %>
  <% # render @timesheets %>
</table>
</div>
<div class="col-md-2">
  <%= link_to 'New Timesheet', new_timesheet_path, class: 'btn btn-primary btn-lg' %>

</div>
</div>
