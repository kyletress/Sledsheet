<% provide(:title, @circuit.name) %>
<h1><%= @circuit.name %></h1>

<table class="table table-bordered">
  <caption><%= @circuit.name %> points</caption>
  <tr>
    <th>Rank</th>
    <th>Athlete</th>
    <th>Points</th>
  </tr>
  <% @points.each do |point| %>
  <tr>
    <td><%= point.rank %></td>
    <td><%= link_to point.athlete.name, point.athlete %></td>
    <td><%= point.total_points %></td>
  </tr>
  <% end %>
</table>

<h3>Recent Events</h3>
<ul>
  <% @circuit.timesheets.each do |timesheet| %>
    <li><%= link_to timesheet.name, timesheet %></li>
  <% end %>
</ul>
