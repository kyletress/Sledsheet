<% provide(:title, "Athletes") %>
<% if current_user && current_user.admin %>
  <%= link_to 'New Athlete', new_athlete_path, class: 'btn btn-primary' %>
<% end %>

<h2>All Athletes</h2>
<section class="athlete-index">
<% @athletes.each do |athlete| %>
<figure class="athlete-card small">
  <%= link_to athlete_path(athlete) do %>
    <%= image_tag athlete.avatar_url(:thumb).to_s %>
  <% end %>
  <figcaption>
    <h4><%= link_to athlete.name, athlete %></h4>
    <p><span class="flag flag-<%= athlete.country_code %>"></span> <%= athlete.country_name %></p>
  </figcaption>
</figure>
<% end %>
</section>
