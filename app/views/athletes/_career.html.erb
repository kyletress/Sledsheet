<% unless @races.empty? %>

<div class="container">
  <table class="table table-striped table-bordered">
    <tr>
      <th>Race</th>
      <th>Date</th>
      <th>Pos.</th>
    </tr>
    <% @races.each do |race| %>
    <tr>
      <td><%= link_to race.name, race %></td>
      <td><%= race.nice_date %></td>
      <td></td>
    </tr>
    <% end %>
  </table>
</div>

<% end %>
