{
  "name": "sledsheet",
  "scripts": {
    "postdeploy": "bin/addon-wait; bundle exec rake db:setup"
  },
  "env": {
    "REVIEW_ENVIRONMENT": "true",
    "ASSET_HOST": {
      "required": true
    },
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_REGION": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "MAILCHIMP_API_KEY": {
      "required": true
    },
    "MAILCHIMP_LIST_ID": {
      "required": true
    },
    "NEW_RELIC_APP_NAME": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "S3_BUCKET_NAME": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "MAILING_LIST_ENABLED": {
      "required": true
    },
    "SKYLIGHT_AUTHENTICATION": {
      "required": true
    }
  },
  "addons": [
    "heroku-postgresql",
    "papertrail"
  ],
  "buildpacks": [
    {
      "url": "urn:buildpack:heroku/ruby"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-addon-wait.git"
    }
  ]
}
